<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:snser="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <com.hc.ysg.utils.ImageViewPlus
        android:id="@+id/themimage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_launcher"
        snser:type="rounded_rect"
        snser:borderColor="#999"
        snser:borderWidth="10dp"
        snser:rectRoundRadius="30dp"/>

    <TextView
        android:id="@+id/themname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>